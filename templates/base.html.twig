{# templates/home/index.html.twig #}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Accueil - Mangas</title>
    <link rel="stylesheet" href="{{ asset('styles/home.css') }}"> {# Ajouter le fichier CSS si nécessaire #}
</head>
<body>

    <header>
        <div class="banner">
            <h1>Bienvenue sur Manga Store</h1>
        </div>
    </header>

    <main>
        <div class="manga-grid">
            {% for manga in mangas %}
                <div class="manga-card">
                    <img src="{{ asset('images/Manga/' ~ manga.image.url) }}" alt="{{ manga.name }}">
                    <h2>{{ manga.name }}</h2>
                    <p class="price">{{ manga.price }}€</p>
                </div>

                {# Insérer un saut de ligne toutes les 5 cartes #}
                {% if loop.index is divisible by(5) %}
                    <div class="clearfix"></div>
                {% endif %}
            {% endfor %}
        </div>
    </main>

</body>
</html>
