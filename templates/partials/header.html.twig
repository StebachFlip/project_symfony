<style>
    .cart-container {
        position: relative;
        display: inline-block;
        align-self: center;  /* Assure que l'élément est centré verticalement par rapport à son conteneur */
    }

    .cart-count {
        position: absolute;
        top: -5px; /* Ajuste légèrement la position verticale */
        right: 10px; /* Ajuste la position horizontale */
        background-color: red;
        color: white;
        font-size: 14px;
        font-weight: bold;
        border-radius: 50%;
        padding: 2px 6px;
        min-width: 18px;
        height: 18px;
        line-height: 18px; /* Centre verticalement le texte */
        text-align: center;
        display: flex;
        justify-content: center; /* Centrage horizontal */
        align-items: center; /* Centrage vertical */
    }

    .icon {
        font-size: 28px; /* Taille de l'icône ajustée pour un meilleur alignement */
        vertical-align: middle; /* S'assure que l'icône soit correctement centrée avec les autres éléments */
    }

    .banner {
        background-color: #888ffd;
        padding: 20px;
        position: fixed;
        left: 0;
        top: 0;
        right: 0;
        display: flex;
        align-items: center;
        justify-content: space-between;
        z-index: 1000;
        font-family: 'Poppins', sans-serif;
    }

    .banner a {
        display: flex;
        align-items: center;
    }

    .banner h1 {
        margin: 0;
        font-size: 30px;
        color: #000;
    }

    .login-link {
        color: #000;
        font-size: 18px;
        text-decoration: none;
        background-color: #888ffd;
        padding: 10px 20px;
        border-radius: 15px;
        transition: background-color 0.3s ease;
        margin-left: auto;
        border: 1px solid #b0b5ff;
        margin-right: 20px;
    }

    .login-link:hover {
        background-color: #b0b5ff;
    }

    .pp {
        margin-left: 20px;
        width: 50px;
        height: 50px;
        border-radius: 50%;
        transition: transform 0.3s ease;
    }

    .pp:hover {
        transform: scale(1.05);
    }

    .logo {
        width: 50px;
        height: auto;
        margin-right: 15px;
    }

    .a:hover {
        background-color: #888ffd;
    }

</style>

<header>
    <div class="banner">
        <a class="home" href="/home">
            <img src="{{ asset('styles/img/logo.jpg') }}" alt="Logo Manga Mania" class="logo">
            <h1><strong>MANGA MANIA</strong></h1>
        </a>
        {% if user %}
            <!-- Si admin, affiche le panneau de configuration -->
            {% if user.role == true %}
                <a class="login-link" href="/admin-pannel">{{'config-pannel'| trans}}</a>
            {% else %}
                <a class="login-link a" style="border: none;"></a>
            {% endif %}
                <div class="cart-container">
                    <a class="login-link" href="/cart">
                        <i class="fa-solid fa-basket-shopping icon"></i>
                        <span id="cart-count" class="cart-count">0</span>
                    </a>
                </div>


            <!-- Si l'user possède une photo de profil, sinon affiche default.png -->
            <a href="/profile">
                {% if user.profilePicture %}
                    <img class ="pp" src="{{ asset(user.profilePicture.path) }}">
                {% else %}
                    <img class ="pp" src="{{ asset('pp/default.png') }}">
                {% endif %}
            </a>

        {% else %}
            <a class="login-link" href="/login-register">{{ 'login_button' | trans }}</a>
        {% endif %} 
    </div>
</header>